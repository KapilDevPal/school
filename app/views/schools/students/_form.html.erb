<%= form_with(model: [:schools, @school, @student], local: true, class: "space-y-6") do |f| %>
  <% if @student.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <i class="fas fa-exclamation-circle text-red-400"></i>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @student.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div><%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :first_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %></div>

    <div><%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :last_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %></div>

    <div><%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %></div>

    <div><%= f.label :date_of_birth, class: "block text-sm font-medium text-gray-700" %>
      <%= f.date_field :date_of_birth, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %></div>

    <div><%= f.label :gender, class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :gender, options_for_select([['Male', 'male'], ['Female', 'female'], ['Other', 'other']]), { include_blank: 'Select gender' }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %></div>

    <div><%= f.label :admission_number, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :admission_number, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %></div>

    <div><%= f.label :school_class_id, "Class", class: "block text-sm font-medium text-gray-700" %>
      <%= f.collection_select :school_class_id, @school.school_classes, :id, :name, { include_blank: 'Select class' }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %></div>

    <div><%= f.label :parent_name, "Parent/Guardian Name", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :parent_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %></div>

    <div><%= f.label :parent_contact, "Parent/Guardian Contact", class: "block text-sm font-medium text-gray-700" %>
      <%= f.telephone_field :parent_contact, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %></div>

    <div><%= f.label :parent_email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :parent_email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %></div>

    <div><%= f.label :roll_number, "Roll Number", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :roll_number, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %></div>

    <div class="sm:col-span-2"><%= f.label :address, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :address, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %></div>
  </div>

  <div class="mt-10">
    <h4 class="text-md font-semibold text-gray-800 mb-4">Admission Details</h4>
    <%= f.fields_for :admission_detail do |ad| %>
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
        <div><%= ad.label :aadhaar_number %> <%= ad.text_field :aadhaar_number, class: "mt-1 block w-full" %></div>
        <div><%= ad.label :ssmid_number %> <%= ad.text_field :ssmid_number, class: "mt-1 block w-full" %></div>
        <div><%= ad.label :scholar_no %> <%= ad.text_field :scholar_no, class: "mt-1 block w-full" %></div>
        <div><%= ad.label :family_id %> <%= ad.text_field :family_id, class: "mt-1 block w-full" %></div>
        <div><%= ad.label :place_of_birth %> <%= ad.text_field :place_of_birth, class: "mt-1 block w-full" %></div>
        <div><%= ad.label :nationality %> <%= ad.text_field :nationality, class: "mt-1 block w-full" %></div>
        <div><%= ad.label :mother_tongue %> <%= ad.text_field :mother_tongue, class: "mt-1 block w-full" %></div>
        <div><%= ad.label :other_languages %> <%= ad.text_field :other_languages, class: "mt-1 block w-full" %></div>
        <div><%= ad.label :category %> <%= ad.text_field :category, class: "mt-1 block w-full" %></div>
        <div><%= ad.label :subcategory %> <%= ad.text_field :subcategory, class: "mt-1 block w-full" %></div>
        <div><%= ad.label :religion %> <%= ad.text_field :religion, class: "mt-1 block w-full" %></div>

        <div><%= ad.label :father_name %> <%= ad.text_field :father_name, class: "mt-1 block w-full" %></div>
        <div><%= ad.label :father_mobile %> <%= ad.telephone_field :father_mobile, class: "mt-1 block w-full" %></div>
        <div><%= ad.label :father_email %> <%= ad.email_field :father_email, class: "mt-1 block w-full" %></div>
        <div><%= ad.label :father_occupation %> <%= ad.text_field :father_occupation, class: "mt-1 block w-full" %></div>
        <div><%= ad.label :father_income %> <%= ad.number_field :father_income, class: "mt-1 block w-full" %></div>

        <div><%= ad.label :mother_name %> <%= ad.text_field :mother_name, class: "mt-1 block w-full" %></div>
        <div><%= ad.label :mother_mobile %> <%= ad.telephone_field :mother_mobile, class: "mt-1 block w-full" %></div>
        <div><%= ad.label :mother_email %> <%= ad.email_field :mother_email, class: "mt-1 block w-full" %></div>
        <div><%= ad.label :mother_occupation %> <%= ad.text_field :mother_occupation, class: "mt-1 block w-full" %></div>
        <div><%= ad.label :mother_income %> <%= ad.number_field :mother_income, class: "mt-1 block w-full" %></div>
        <div><%= ad.label :total_family_income %> <%= ad.number_field :total_family_income, class: "mt-1 block w-full" %></div>
      </div>
    <% end %>
  </div>

  <div class="flex justify-end space-x-3 mt-6">
    <%= link_to 'Cancel', schools_school_students_path(@school), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <%= f.submit @student.new_record? ? 'Create Student' : 'Update Student', class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %>
