<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-xl font-semibold text-gray-900">Add New Staff Member</h1>
      <p class="mt-2 text-sm text-gray-700">Add a new staff member to your school.</p>
    </div>
  </div>

  <div class="mt-8">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <div class="px-4 sm:px-0">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Staff Information</h3>
          <p class="mt-1 text-sm text-gray-600">
            Enter the staff member's details below. They will receive an email with their login credentials.
          </p>
        </div>
      </div>
      <div class="mt-5 md:col-span-2 md:mt-0">
        <div class="shadow sm:overflow-hidden sm:rounded-md">
          <div class="space-y-6 bg-white px-4 py-5 sm:p-6">
            <%= render 'form' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 