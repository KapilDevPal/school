<%= form_with(
  model: @school_class,
  url: @school_class.new_record? ? schools_school_classes_path(@school) : schools_school_class_path(@school, @school_class),
  local: true,
  class: "space-y-6"
) do |f| %>
  
  <% if @school_class.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
      <h3 class="text-sm font-medium text-red-800">
        <%= pluralize(@school_class.errors.count, "error") %> prohibited this class from being saved:
      </h3>
      <ul class="mt-2 text-sm text-red-700 list-disc pl-5 space-y-1">
        <% @school_class.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= f.label :section, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :section, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= f.label :grade, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :grade, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= f.label :teacher_id, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :teacher_id, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= f.label :room_number, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :room_number, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= f.label :capacity, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :capacity, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>
  </div>

  <div class="flex justify-end space-x-3 mt-4">
    <%= link_to 'Cancel', schools_school_classes_path(@school), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md text-sm text-gray-700 bg-white hover:bg-gray-50" %>
    <%= f.submit @school_class.new_record? ? 'Create Class' : 'Update Class', class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md text-sm text-white bg-blue-600 hover:bg-blue-700" %>
  </div>

<% end %>
