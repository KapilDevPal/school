<div class="container mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold text-gray-800"><%= @school_class.name %></h1>
      <div class="space-x-2">
        <%= link_to 'Edit', edit_schools_class_path(@school_class), class: 'bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg' %>
        <%= link_to 'Back', schools_classes_path, class: 'bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded-lg' %>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h2 class="text-xl font-semibold text-gray-700 mb-4">Class Details</h2>
        <dl class="space-y-2">
          <div>
            <dt class="text-sm font-medium text-gray-500">Grade</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @school_class.grade %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Section</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @school_class.section %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Room Number</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @school_class.room_number %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Capacity</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @school_class.capacity %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Class Teacher</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @school_class.teacher&.full_name %></dd>
          </div>
        </dl>
      </div>

      <div>
        <h2 class="text-xl font-semibold text-gray-700 mb-4">Students</h2>
        <div class="space-y-2">
          <% @school_class.students.each do |student| %>
            <div class="flex items-center justify-between p-2 bg-gray-50 rounded">
              <span class="text-sm text-gray-900"><%= student.full_name %></span>
              <%= link_to 'View', schools_student_path(student), class: 'text-blue-500 hover:text-blue-700 text-sm' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 