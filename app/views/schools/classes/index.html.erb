<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Classes</h1>
    <%= link_to 'New Class', new_schools_school_class_path(current_school), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>

  <% if @classes.present? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @classes.each do |school_class| %>
      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="p-6">
            <div class="flex justify-between items-start">
              <div>
                <h3 class="text-lg font-medium text-gray-900"><%= school_class.name %></h3>
                <p class="mt-1 text-sm text-gray-500">Grade <%= school_class.grade %> - Section <%= school_class.section %></p>
              </div>
              <div class="flex space-x-2">
                <%= link_to 'Edit', edit_schools_school_class_path(current_school, school_class), class: "text-indigo-600 hover:text-indigo-900" %>
                <%= button_to 'Delete', schools_school_class_path(current_school, school_class), method: :delete, class: "text-red-600 hover:text-red-900", data: { confirm: 'Are you sure?' } %>
              </div>
            </div>
            <div class="mt-4">
              <p class="text-sm text-gray-500">Room: <%= school_class.room_number %></p>
              <p class="text-sm text-gray-500">Capacity: <%= school_class.capacity %></p>
              <% if school_class.teacher.present? %>
                <p class="text-sm text-gray-500">Teacher: <%= school_class.teacher.full_name %></p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-gray-500">No classes found. Create your first class!</p>
      </div>
    <% end %>
</div> 