<%= form_with(model: [:schools, :transport, @transport_route], local: true, class: "space-y-8 divide-y divide-gray-200") do |f| %>
  <div class="space-y-8 divide-y divide-gray-200">
    <div>
      <div>
        <h3 class="text-lg font-medium leading-6 text-gray-900">Transport Route Information</h3>
        <p class="mt-1 text-sm text-gray-500">Enter the details of the transport route.</p>
      </div>

      <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
        <div class="sm:col-span-3">
          <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.text_field :name, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= f.label :start_point, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.text_field :start_point, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= f.label :end_point, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.text_field :end_point, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= f.label :vehicle_id, "Vehicle", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.collection_select :vehicle_id, @vehicles, :id, :registration_number, { prompt: "Select a vehicle" }, { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= f.label :driver_id, "Driver", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.collection_select :driver_id, @drivers, :id, :name, { prompt: "Select a driver" }, { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <div class="relative flex items-start">
            <div class="flex h-5 items-center">
              <%= f.check_box :active, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
            </div>
            <div class="ml-3 text-sm">
              <%= f.label :active, class: "font-medium text-gray-700" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="pt-5">
    <div class="flex justify-end">
      <%= link_to "Cancel", schools_transport_index_path, class: "rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      <%= f.submit class: "ml-3 inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
    </div>
  </div>
<% end %> 