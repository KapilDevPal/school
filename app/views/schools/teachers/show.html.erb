<div class="container mx-auto px-4 py-8">
  <div class="max-w-3xl mx-auto">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold">Teacher Details</h1>
      <div class="space-x-3">
        <%= link_to 'Edit', edit_schools_school_teacher_path(@school, @teacher), class: 'text-yellow-600 hover:text-yellow-900' %>
        <%= link_to 'Back to Teachers', schools_school_teachers_path(@school), class: 'text-indigo-600 hover:text-indigo-900' %>
      </div>
    </div>

    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <div class="px-6 py-4">
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <div>
            <h3 class="text-sm font-medium text-gray-500">Name</h3>
            <p class="mt-1 text-sm text-gray-900"><%= "#{@teacher.first_name} #{@teacher.last_name}" %></p>
          </div>

          <div>
            <h3 class="text-sm font-medium text-gray-500">Email</h3>
            <p class="mt-1 text-sm text-gray-900"><%= @teacher.email %></p>
          </div>

          <div>
            <h3 class="text-sm font-medium text-gray-500">Phone Number</h3>
            <p class="mt-1 text-sm text-gray-900"><%= @teacher.phone_number %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 