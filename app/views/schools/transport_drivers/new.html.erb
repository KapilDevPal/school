<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-xl font-semibold text-gray-900">Register New Driver</h1>
      <p class="mt-2 text-sm text-gray-700">Add a new driver to your school's transport team.</p>
    </div>
  </div>

  <div class="mt-8">
    <%= form_with(model: [:schools, @transport_driver], local: true, class: "space-y-8 divide-y divide-gray-200") do |f| %>
      <div class="space-y-8 divide-y divide-gray-200">
        <div>
          <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
            <div class="sm:col-span-3">
              <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.text_field :name, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= f.label :license_number, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.text_field :license_number, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= f.label :phone, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.telephone_field :phone, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.email_field :email, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <div class="relative flex items-start">
                <div class="flex h-5 items-center">
                  <%= f.check_box :active, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
                </div>
                <div class="ml-3 text-sm">
                  <%= f.label :active, class: "font-medium text-gray-700" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="pt-5">
        <div class="flex justify-end">
          <%= link_to "Cancel", schools_transport_drivers_path, class: "rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
          <%= f.submit class: "ml-3 inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
        </div>
      </div>
    <% end %>
  </div>
</div> 