<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold text-gray-800 mb-4">Attendance Records</h1>
  <table class="min-w-full bg-white">
    <thead>
      <tr>
        <th class="py-2 px-4 border-b">ID</th>
        <th class="py-2 px-4 border-b">Date</th>
        <th class="py-2 px-4 border-b">Student</th>
        <th class="py-2 px-4 border-b">Status</th>
      </tr>
    </thead>
    <tbody>
      <% @attendance_records.each do |record| %>
        <tr>
          <td class="py-2 px-4 border-b"><%= record.id %></td>
          <td class="py-2 px-4 border-b"><%= record.date %></td>
          <td class="py-2 px-4 border-b"><%= record.student.try(:full_name) %></td>
          <td class="py-2 px-4 border-b"><%= record.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div> 