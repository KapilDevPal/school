<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <div class="px-4 sm:px-0">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Profile Information</h3>
        <p class="mt-1 text-sm text-gray-600">
          Your personal information and contact details.
        </p>
      </div>
    </div>

    <div class="mt-5 md:mt-0 md:col-span-2">
      <div class="shadow sm:rounded-md sm:overflow-hidden">
        <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
          <div class="grid grid-cols-6 gap-6">
            <div class="col-span-6 sm:col-span-3">
              <h4 class="text-sm font-medium text-gray-500">First Name</h4>
              <p class="mt-1 text-sm text-gray-900"><%= @teacher.first_name %></p>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <h4 class="text-sm font-medium text-gray-500">Last Name</h4>
              <p class="mt-1 text-sm text-gray-900"><%= @teacher.last_name %></p>
            </div>

            <div class="col-span-6 sm:col-span-4">
              <h4 class="text-sm font-medium text-gray-500">Email</h4>
              <p class="mt-1 text-sm text-gray-900"><%= @teacher.email %></p>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <h4 class="text-sm font-medium text-gray-500">Phone Number</h4>
              <p class="mt-1 text-sm text-gray-900"><%= @teacher.phone_number %></p>
      </div>
      </div>
      </div>

        <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
          <%= link_to "Edit Profile", edit_teachers_profile_path, class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
      </div>
  </div>
  </div>
</div> 