<div class="min-h-screen bg-gray-100">
  <div class="container mx-auto px-4 py-16">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Welcome to OpenSchool</h1>
      <p class="text-xl text-gray-600">Please select your login type</p>
    </div>

    <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- School Owner Login Card -->
      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="p-8">
          <h2 class="text-2xl font-semibold text-gray-900 mb-4">School Owner</h2>
          <p class="text-gray-600 mb-6">Access your school's management dashboard and settings.</p>
          <%= link_to 'Login as School Owner', new_school_owner_session_path, class: 'block w-full text-center bg-blue-600 text-white py-3 px-4 rounded-md hover:bg-blue-700 transition duration-150' %>
        </div>
      </div>

      <!-- Staff/User Login Card -->
      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="p-8">
          <h2 class="text-2xl font-semibold text-gray-900 mb-4">Staff/User</h2>
          <p class="text-gray-600 mb-6">Access your school's management system as staff or user.</p>
          <%= link_to 'Login as Staff/User', new_user_session_path, class: 'block w-full text-center bg-green-600 text-white py-3 px-4 rounded-md hover:bg-green-700 transition duration-150' %>
        </div>
      </div>
    </div>
  </div>
</div> 